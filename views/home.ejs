<!DOCTYPE html>

<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title><%=title%></title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css">
        <link rel="stylesheet" href="/css/home.css">
    </head>
    <body>
        <h1 id="Heading"><i class="fa-solid fa-id-card"></i> My Contact List</h1>
        <div id="form">
            <form action="create-contact" method="POST">
                <input type="text" name="name" placeholder="Enter the name" required>
                &nbsp;&nbsp;&nbsp;
                <input type="text" name="phone" placeholder="Enter the phone number" required>
                &nbsp;&nbsp;&nbsp;
                <button>Add Contact</button>
            </form>
        </div>
        <div>
            <ul id="contact-list">
                <% for(let i=0; i<contact_List.length;i++){%>
                    <li id="display">
                        <span><%=contact_List[i].name%></span>
                        <span><%=contact_List[i].phone%>
                            &nbsp;&nbsp;
                            <a id="delete" href="/delete-contact/<%=i%>">
                                <i class="fa-solid fa-delete-left" id ="icon"></i>
                            </a>
                        </span>
                    </li>
                <%}%>
            </ul>
        </div>
        <script src="/js/home.js"></script>
    </body>
</html>